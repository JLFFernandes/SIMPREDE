# SIMPREDE Airflow Environment Configuration Template
# Copy this file to .env and update the values as needed

# =============================================================================
# AIRFLOW CONFIGURATION
# =============================================================================
AIRFLOW_UID=50000
AIRFLOW_GID=0

# =============================================================================
# GOOGLE CLOUD STORAGE CONFIGURATION
# =============================================================================
# GCS Project ID (required)
GCS_PROJECT_ID=simprede

# GCS Bucket name for data pipeline (will be created automatically)
GCS_BUCKET_NAME=simprede-data-pipeline

# GCS Location/Region for bucket creation
GCS_LOCATION=EUROPE-WEST1

# Path to GCS service account credentials JSON file
# You can either:
# 1. Place your credentials file at ./config/gcs-credentials.json
# 2. Set this to the absolute path of your credentials file
# 3. Leave empty to use default Application Default Credentials
GCS_CREDENTIALS_FILE=./config/gcs-credentials.json

# Alternative: Use Application Default Credentials (ADC)
# Set to "true" to use ADC instead of service account file
# This is useful when running on Google Cloud Platform
USE_ADC=false

# =============================================================================
# CHROME/SELENIUM CONFIGURATION
# =============================================================================
# Chrome binary path (auto-detected in Docker)
CHROME_BIN=/usr/bin/chromium
CHROMEDRIVER_PATH=/usr/bin/chromedriver
SELENIUM_HEADLESS=1
DISPLAY=:99

# =============================================================================
# DEBUGGING AND LOGGING
# =============================================================================
PYTHONUNBUFFERED=1
PYTHONDONTWRITEBYTECODE=1

# Enable GCS debug logging (set to "true" for verbose logs)
GCS_DEBUG=false
